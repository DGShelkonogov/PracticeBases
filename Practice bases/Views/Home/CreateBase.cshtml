@model Practice_bases.ViewModel.BaseViewModel;

@{
    ViewData["Title"] = "Home Page";
}


<div class="d-flex flex-column">
    <div class="text-center">
        <h1 class="display-4">Create base</h1>
    </div>
    <div class="d-flex justify-content-around">
        <div>
            <form asp-action="ImportFile" asp-controller="Home" method="post" enctype="multipart/form-data">
                <div>
                    <label asp-for="uploadedFile">uploadedFile</label><br />
                    <input type="file" asp-for="uploadedFile" />
                </div>
                
                
                <div>
                    <label asp-for="Base.Specialty">Specialty</label><br />
                    <input type="text" asp-for="Base.Specialty" />
                </div>
                
                <div>
                    <label asp-for="Base">Deadline</label><br />
                    <input type="date" asp-for="Base.StartDate" />
                </div>

                <div>
                    <label asp-for="Base">EndDate</label><br />
                    <input type="date" asp-for="Base.EndDate" />
                </div>
                
                <input type="submit" value="Загрузить"/>
            </form>
        </div>
    </div>
</div>